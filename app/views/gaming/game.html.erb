<h1>Welcome to the longuest word</h1>

<h3>Here is your grid :</h3>
<table>
  <tr>
    <% @grid.each do |letter| %>
      <td><%= letter[0]  %></td>
    <% end %>
  </tr>
</table>
<form action="/score">
  <label for="">What's your best shot?</label>
  <input type="text" name="my_word">
  <input type="hidden" name="start_time" value="<%= @start_time %>" >
  <input type="hidden" name="grid" value="<%= @grid.join(' ') %>">
  <input type="submit" value="Submit!">
</form>
